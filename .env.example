# Application
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=trab_user
DB_PASSWORD=secure_password_here
DB_NAME=trab_search
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-this
JWT_REFRESH_SECRET=your-refresh-token-secret-key-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# TRAIS Integration
TRAIS_BASE_URL=https://trais.mof.go.tz
TRAIS_USERNAME=admin@trab.go.tz
TRAIS_PASSWORD=your_password
TRAIS_API_KEY=

# OpenAI (for embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads

# Local File Processing
LOCAL_FILES_SOURCE_DIR=/Users/mwendavano/trab/files

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Scheduled Tasks (Cron Expressions)
# File scanner: Check for new files in local directory
SCHEDULE_FILE_SCAN=*/10 * * * *
# OCR processor: Process pending document OCR tasks
SCHEDULE_OCR_PROCESS=*/10 * * * *
# Incremental sync: Sync updated cases from TRAIS
SCHEDULE_INCREMENTAL_SYNC=0 2 * * *
# Batch size for OCR processing
OCR_BATCH_SIZE=5


# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
LOCAL_FILES_SOURCE_DIR=/Users/mwendavano/trab/files